# Django IoT Environment Configuration
# Source this file to set up your development environment
# Usage: source .env

# Project paths
export DJANGO_PROJECT_ROOT="/home/mauricio/django"
export DJANGO_VENV_PATH="$DJANGO_PROJECT_ROOT/venv"

# Django settings
export DJANGO_SETTINGS_MODULE="myproject.settings"
export DJANGO_DEBUG="True"
export DJANGO_SECRET_KEY="your-secret-key-here"

# Database settings (if using PostgreSQL or MySQL)
# export DATABASE_URL="sqlite:///db.sqlite3"

# Python path setup
export PYTHONPATH="$DJANGO_PROJECT_ROOT:$PYTHONPATH"

# Activate virtual environment function
activate_env() {
    if [ -f "$DJANGO_VENV_PATH/bin/activate" ]; then
        source "$DJANGO_VENV_PATH/bin/activate"
        echo "Virtual environment activated"
        echo "Python: $(which python)"
        echo "Django project: $DJANGO_PROJECT_ROOT"
    else
        echo "Virtual environment not found at $DJANGO_VENV_PATH"
        return 1
    fi
}